<main>
 <p id="notice"></p>
 <div class="container px-5 px-sm-0">
       
  <div class="row">
   
    
     <%= render 'users/list',user: @user,book: @book %>
    
    <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
     <table class="table table-hover table-inverse">
        <thead>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
         <% @books.each do |book| %>
         <tr>
           <td>
            <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
           </td>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
           <td>
            <%= link_to "show","/books/#{book.id}" %>
           </td>
         </tr>
         <% end %>
        </tbody>
       </table>
    </div>
  </div>
 </div>
</main>
