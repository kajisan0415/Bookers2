 <div class="profile-container">
  <h3 class="profile-name">Username</h3>
</div>
  
  
  <h2>New book</h2>
  </div>
  <%= form_with model:@book,local:true do |f| %>
    <div class="field">
     <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
     <label for="book_body">Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div class="action">
      <%= f.submit "Create Book" %>
    </div>
 <% end %>

  
  
 <% if flash[:notice] %>
  <div class="flash">
  <%= flash[:notice] %>
  </div>
 <% end %>