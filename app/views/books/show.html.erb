<%= render 'users/list',user: @user,book: @book %>

<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>

      </div>
    <% end %>
<h1>Book detail</h1>
    <table>
        <tbody>
            <tr>
              <td>
                <%= link_to "/users/#{@user.id}" do %>
                <%= @user.name %>
                <% end %>
              </td>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td>
              <% if @user.id == current_user.id %>
               <%= link_to "edit",edit_book_path(@book.id) %>
              <% end %>
              </td>
              <td>
               <% if @user.id == current_user.id %>
               <%= link_to "Destroy",books_path(@book.id), method: :delete,"data-confirm" => "Are you sure?" %>
               <% end %>
              </td>
            </tr>
        </tbody>
    </table>