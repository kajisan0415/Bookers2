<%= render 'users/list', user: current_user, book: @book %>

 <% if flash[:notice] %>
  <div class="flash">
  <%= flash[:notice] %>
  </div>
 <% end %>

 <h1>Books</h1>
  <table>
   <thead>
   <th>Title</th>
   <th>Opinion</th>
   <th colspan="3"></th>
   </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
      <td><%= link_to "/books/#{book.id}" do %>
      <%= book.title %>
      <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
     <% end %>
   </tbody>
  </table>



